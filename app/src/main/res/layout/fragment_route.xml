<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_weight="1">

    <TextView
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:text="Current Route:"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current"
            android:text="GetRoute"
            android:id="@+id/btnGetRoute"
            />

    <TextView android:layout_width="0dp"
              android:layout_height="match_parent"
              android:id="@+id/tvRouteJson"

              android:layout_toStartOf="@+id/waypoints"
              android:layout_below="@id/btnGetRoute"
              android:layout_alignParentStart="true"
              android:layout_alignParentBottom="true"
              />
    <ListView
        android:id="@+id/waypoints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/current" />


</RelativeLayout>
